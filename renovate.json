{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "assignees": ["@sisu4u"],
    "assigneesSampleSize": 1,
    "gitLabAutomerge": true,
    "packageRules": [
      {
        "packageNames": [
          "@angular/core",
          "@angular/cli",
          "@angular/material",
          "@angular/cdk"
        ],
        "postUpgradeTasks": {
          "commands": [
            "install-tool yarn 1.22.19 && yarn global add @angular/cli && cd client-code && yarn install && ng update {{{depName}}} --from={{{currentVersion}}} --to={{{newVersion}}} --migrate-only --allow-dirty --force"
          ],
          "fileFilters": [
            "**/**"
          ]
        },
        "updateTypes": ["major", "minor", "patch"]
      },
      {
        "matchPackagePatterns": ["eslint"],
        "groupName": "eslint packages"
      },
      {
        "updateTypes": ["lockFileMaintenance"],
        "automerge": true
      },
      {
        "depTypeList": ["devDependencies"],
        "automerge": true,
        "updateTypes": ["minor", "patch", "pin", "digest"]
      }
    ],
    "vulnerabilityAlerts": {
      "labels": ["security"],
      "assignees": ["@sisu4u"]
    },
    "dependencyDashboard": true,
    "commitMessagePrefix": "[renovate-bot] ",
    "lockFileMaintenance": {
      "enabled": true,
      "schedule": [
        "before 5:00am"
      ]
    }
  }
  
